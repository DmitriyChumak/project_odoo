<odoo>
    <record id="view_form_patient" model="ir.ui.view">
        <field name="name">patient.form</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="disease_id"/>
                        <field name="doctor_id"/>
                        <field name="visit_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tree_patient" model="ir.ui.view">
        <field name="name">patient.tree</field>
        <field name="model">hr_hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patient">
                <field name="name"/>
                <field name="age"/>
                <field name="disease_id"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital.action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hr_hospital.patient</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
